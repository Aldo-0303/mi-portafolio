---
import datos from '../../data.json';
import GitHub from '../icons/GitHub.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import Mail from '../icons/Mail.astro';
import Ubicacion from '../icons/ubicacion.astro';

interface Props {
    principal: boolean;
}

const { informacion: { correo, direccion } } = datos;
const { principal } = Astro.props;
---
<section class="w-full bg-gradient-to-r from-gray-900 via-zinc-800 to-gray-900 grid place-items-center pt-14">
    <main class="w-full max-w-6xl flex justify-center">
        <header>
            <div class="relative">
                <figure class={`${principal ? 'max-h-48 md:max-h-80' : 'max-h-36'} rounded-b-xl overflow-hidden flex items-center`} transition:name="portadaimg">
                    <img class="object-contain" src="/img/portada.webp" alt="Imagen de protada.">
                </figure>
                <figure class="absolute -bottom-16 w-24 md:-bottom-24 left-4 rounded-full md:w-36 overflow-hidden border-4 border-slate-800" transition:name="perfilimg">
                    <img class="w-24 h-24 md:w-36 md:h-36 rounded-full shadow-lg object-cover" src="/img/yo.webp" alt="Foto de mi."/>
                </figure>
            </div>
            <div class="flex flex-col items-center gap-3 my-5 px-4 sm:px-0" transition:name="infoPerfil">
                <h1 class="text-2xl md:text-4xl font-bold text-white">Daniel Carranza</h1>
                <p class="text-lg text-balance text-center text-gray-300 max-w-lg">Full Stack Developer con más de año y medio de experiencia en el desarrollo web.</p>
                <span class="flex gap-3 items-center text-gray-300">
                    <Ubicacion />
                    {direccion}
                </span>
                <a href={`mailto:${correo}`} class="flex items-center gap-2 text-gray-300 hover:text-blue-500" target="_blank" rel="noopener noreferrer">
                    <Mail />
                    {correo}
                </a>
                <footer class="flex gap-3">
                    <a href="https://github.com/Aldo-0303" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-blue-500">
                        <GitHub />
                    </a>
                    <a href="https://www.linkedin.com/in/daniel-carranza-8576722b7/" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-blue-500">
                        <LinkedIn />
                    </a>
                </footer>
            </div>
        </header>
    </main>
</section>